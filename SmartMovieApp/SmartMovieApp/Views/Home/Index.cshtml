@model List<SmartMovieApp.Models.Movie>

<h2 class="text-center mt-4">Filmler</h2>

<!-- 🔍 Arama Kutusu -->
<div class="container mb-4">
    <form method="get" asp-action="Index" class="d-flex justify-content-center mb-4">
        <input type="text" name="query" value="@ViewBag.SearchQuery" class="form-control w-50 me-2" placeholder="Film ara..." />
        <button type="submit" class="btn btn-primary">Ara</button>
    </form>
</div>

<!-- 🎬 Film Kartları -->
<div class="container">
    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow">
                    <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title" style="height: 400px; object-fit: cover;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text">@movie.Description?.Substring(0, Math.Min(100, movie.Description.Length))...</p>
                        <p><strong>IMDB:</strong> @movie.ImdbRating</p>
                        <p><strong>Yayın:</strong> @movie.ReleaseDate.ToShortDateString()</p>
                    </div>
                </div>
            </div>
        }
    </div>

  
        <div class="text-center mb-4">
            <p>Devamı için giriş yapın veya kayıt olun.</p>
            <a class="btn btn-primary me-2" href="/Account/Login">Giriş Yap</a>
            <a class="btn btn-secondary" href="/Account/Register">Kayıt Ol</a>
        </div>

</div>
