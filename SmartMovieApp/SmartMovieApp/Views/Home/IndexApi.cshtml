@model List<SmartMovieApp.DTOs.MovieDto>

<section class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Film Keşfet</h2>
        <p class="text-muted">Film ismine göre arama yapabilir ve detaylarını inceleyebilirsin.</p>
    </div>

    <form method="get" asp-action="Index" class="d-flex justify-content-center mb-5">
        <input type="text" name="query" value="@ViewBag.SearchQuery" class="form-control w-50 me-2 shadow-sm rounded-pill px-4" placeholder="Film ara..." />
        <button type="submit" class="btn btn-outline-primary rounded-pill px-4">Ara</button>
    </form>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var movie in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <img src="@movie.Poster" class="card-img-top rounded-top" alt="@movie.Title" style="height: 400px; object-fit: cover;" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@movie.Title</h5>
                            <p class="mb-1"><strong>Yayın:</strong> @movie.Year</p>
                            <p class="mb-1"><strong>Tür:</strong> @movie.Type</p>
                        </div>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="card-footer bg-white border-top d-flex flex-wrap justify-content-center gap-2 py-3">
                                <a href="/Favorites/Add/@movie.Id" class="btn btn-outline-danger btn-sm d-flex align-items-center">
                                    ❤️ <span class="ms-1">Beğen</span>
                                </a>
                                <a href="/Reviews/Add/@movie.Id" class="btn btn-outline-primary btn-sm d-flex align-items-center">
                                    💬 <span class="ms-1">Yorum Yap</span>
                                </a>
                                <a href="/Ratings/Rate/@movie.Id" class="btn btn-outline-warning btn-sm d-flex align-items-center text-dark">
                                    ⭐ <span class="ms-1">Puan Ver</span>
                                </a>
                                <a href="/Movies/Details/@movie.Id" class="btn btn-outline-dark btn-sm d-flex align-items-center">
                                    🔍 <span class="ms-1">Detay</span>
                                </a>
                            </div>
                        }

                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            Aramanıza uygun film bulunamadı.
        </div>
    }
</section>
