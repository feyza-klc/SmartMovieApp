@model List<SmartMovieApp.Models.Movie>

<h2 class="text-center mt-4">Hoş Geldin, @User.Identity.Name 🎉</h2>

<!-- 🔍 Arama Kutusu -->
<div class="container mb-4">
    <form method="get" asp-action="Home" class="d-flex justify-content-center mb-4">
        <input type="text" name="query" value="@ViewBag.SearchQuery" class="form-control w-50 me-2" placeholder="Film ara..." />
        <button type="submit" class="btn btn-primary">Ara</button>
    </form>
</div>

<!-- 🎬 Film Kartları -->
<div class="container">
    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow">
                    <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title" style="height: 400px; object-fit: cover;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text">@movie.Description?.Substring(0, Math.Min(100, movie.Description.Length))...</p>
                        <p><strong>IMDB:</strong> @movie.ImdbRating</p>
                        <p><strong>Yayın:</strong> @movie.ReleaseDate.ToShortDateString()</p>

                        <!-- 🔘 Kullanıcı işlemleri -->
                        <div class="mt-auto">
                            <a href="/Favorites/Add/@movie.Id" class="btn btn-outline-success btn-sm me-2">❤️ Beğen</a>
                            <a href="/Reviews/Add/@movie.Id" class="btn btn-outline-primary btn-sm me-2">💬 Yorum Yap</a>
                            <a href="/Ratings/Rate/@movie.Id" class="btn btn-outline-warning btn-sm me-2">⭐ Puan Ver</a>
                            <a href="/Movies/Details/@movie.Id" class="btn btn-outline-dark btn-sm">🔍 Detay</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
