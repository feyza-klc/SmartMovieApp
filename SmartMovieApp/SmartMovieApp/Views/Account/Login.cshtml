@model SmartMovieApp.DTOs.LoginDto

@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        margin: 0;
        padding: 0;
        background: url('/images/loginbg.jpg') no-repeat center center fixed;
        background-size: cover;
        color: white;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-container {
        max-width: 700px;
        margin: 5rem auto;
        padding: 3rem;
        background-color: rgba(0, 0, 0, 0.55);
        backdrop-filter: blur(7px);
        border-radius: 20px;
        box-shadow: 0 0 25px rgba(0, 0, 0, 0.7);
        color: white;
    }

    .form-control {
        background-color: #1f2937;
        color: white;
        border: 1px solid #3b3b3b;
    }

        .form-control::placeholder {
            color: #aaa;
        }

        .form-control:focus {
            background-color: #1f2937;
            color: white;
            border-color: #58a6ff;
            box-shadow: none;
        }

    label {
        margin-top: 1rem;
    }

    .btn-login {
        margin-top: 2rem;
        background-color: #238636;
        color: white;
        border: none;
        padding: 10px 25px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-login:hover {
            background-color: #2ea043;
        }

    .error-box {
        background-color: rgba(255, 0, 0, 0.15);
        color: #ffc9c9;
        border-left: 5px solid #ff6b6b;
        padding: 1rem;
        border-radius: 8px;
        margin-top: 1.5rem;
    }

    .register-link {
        margin-top: 1.5rem;
        text-align: center;
        font-size: 0.95rem;
    }

        .register-link a {
            color: #58a6ff;
            text-decoration: none;
            font-weight: 600;
        }

            .register-link a:hover {
                text-decoration: underline;
            }
</style>

<div class="login-container">
    <h2 class="text-center mb-4">🎬 Giriş Yap</h2>

    @if (ViewBag.Error != null)
    {
        <div class="error-box">
            <strong>Hata:</strong> @ViewBag.Error
        </div>
    }

    <form asp-action="Login" method="post">
        <div class="form-group">
            <label>Kullanıcı Adı veya Email</label>
            <input asp-for="UsernameOrEmail" class="form-control" placeholder="kullanici@site.com veya kullaniciAdi" />
        </div>
        <div class="form-group">
            <label>Şifre</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-login">Giriş Yap</button>
        </div>
    </form>

    <div class="register-link">
        Hesabınız yok mu?
        <a asp-controller="Account" asp-action="Register">Kayıt Ol</a>
    </div>
</div>
