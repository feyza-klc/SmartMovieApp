@model SmartMovieApp.DTOs.RegisterDto

@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        margin: 0;
        padding: 0;
        background: url('/images/registerbg.jpg') no-repeat center center fixed;
        background-size: cover;
        color: white;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .register-container {
        max-width: 700px;
        margin: 5rem auto;
        padding: 2.5rem;
        background-color: rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(5px);
        border-radius: 20px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
        color: white;
    }

    .form-control {
        background-color: #1f2937;
        color: white;
        border: 1px solid #3b3b3b;
    }

        .form-control::placeholder {
            color: #aaa;
        }

        .form-control:focus {
            background-color: #1f2937;
            color: white;
            border-color: #58a6ff;
            box-shadow: none;
        }

    label {
        margin-top: 1rem;
    }

    .btn-register {
        margin-top: 2rem;
        background-color: #238636;
        color: white;
        border: none;
    }

        .btn-register:hover {
            opacity: 0.9;
        }
</style>

<div class="register-container">
    <h2>Filmlerin Topluluğuna Adım At.</h2>

    <form asp-action="Register" method="post">
        <div class="form-group">
            <label asp-for="Username">Kullanıcı Adın</label>
            <input asp-for="Username" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Emailin</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Şifren</label>
            <input asp-for="Password" type="password" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Kayıt Ol</button>

        @if (ViewBag.Error != null)
        {
            <p style="color:red">@ViewBag.Error</p>
        }
    </form>
</div>
