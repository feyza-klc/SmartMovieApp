@model SmartMovieApp.DTOs.RegisterDto

@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        margin: 0;
        padding: 0;
        background: url('/images/registerbg.jpg') no-repeat center center fixed;
        background-size: cover;
        color: white;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .register-container {
        max-width: 700px;
        margin: 5rem auto;
        padding: 3rem 2.5rem;
        background-color: rgba(0, 0, 0, 0.55);
        backdrop-filter: blur(7px);
        border-radius: 20px;
        box-shadow: 0 0 25px rgba(0, 0, 0, 0.7);
        color: white;
    }

    .form-control {
        background-color: #1f2937;
        color: white;
        border: 1px solid #3b3b3b;
    }

        .form-control::placeholder {
            color: #aaa;
        }

        .form-control:focus {
            background-color: #1f2937;
            color: white;
            border-color: #58a6ff;
            box-shadow: none;
        }

    label {
        margin-top: 1rem;
    }

    .btn-register {
        margin-top: 2rem;
        background-color: #238636;
        color: white;
        border: none;
        padding: 10px 25px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-register:hover {
            background-color: #2ea043;
        }

    .error-box {
        background-color: rgba(255, 0, 0, 0.15);
        color: #ffc9c9;
        border-left: 5px solid #ff6b6b;
        padding: 1rem;
        border-radius: 8px;
        margin-top: 1.5rem;
    }

    .login-link {
        margin-top: 1.5rem;
        text-align: center;
        font-size: 0.95rem;
    }

        .login-link a {
            color: #58a6ff;
            text-decoration: none;
            font-weight: 600;
        }

            .login-link a:hover {
                text-decoration: underline;
            }
</style>

<div class="register-container">
    <h2 class="text-center mb-4">🎬 Filmlerin Topluluğuna Adım At</h2>

    <form asp-action="Register" method="post">
        <div class="form-group">
            <label asp-for="Username">Kullanıcı Adı</label>
            <input asp-for="Username" class="form-control" placeholder="Örn: filmsever42" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" placeholder="örnek@mail.com" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Şifre</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="En az 6 karakter" />
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="error-box">
                <ul class="mb-0">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <div class="text-center">
            <button type="submit" class="btn btn-register">Kayıt Ol</button>
        </div>
    </form>

    <div class="login-link">
        Zaten bir hesabın var mı?
        <a asp-controller="Account" asp-action="Login">Giriş Yap</a>
    </div>
</div>
